package models;

public class Inventory {
    private int inventoryId;
    private int productId;
    private boolean isReorderNeeded; // boolean field to represent reorder status

    // Constructor
    public Inventory(int inventoryId, int productId, boolean isReorderNeeded) {
        this.inventoryId = inventoryId;
        this.productId = productId;
        this.isReorderNeeded = isReorderNeeded;
    }

    // Getters and Setters
    public int getInventoryId() { return inventoryId; }
    public void setInventoryId(int inventoryId) { this.inventoryId = inventoryId; }

    public int getProductId() { return productId; }
    public void setProductId(int productId) { this.productId = productId; }

    public boolean isReorderNeeded() { return isReorderNeeded; }
    public void setReorderNeeded(boolean isReorderNeeded) { this.isReorderNeeded = isReorderNeeded; }
}
