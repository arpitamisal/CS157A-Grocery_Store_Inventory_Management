package application;

import javafx.application.Application;
import javafx.scene.Scene;
import javafx.stage.Modality;
import javafx.stage.Stage;
import Pages.WarrantyAlert;

public class Main extends Application {
    @Override
    public void start(Stage primaryStage) {
        try {
            // Initial setup of primary stage with main content
            primaryStage.setTitle("Main Application");
            primaryStage.setScene(new Scene(new HomeScreen(primaryStage).getRoot(), 650, 650));
            primaryStage.show();

            // Now create the alert as a secondary stage
            Stage alertStage = new Stage();
            WarrantyAlert warrantyAlert = new WarrantyAlert();

            // Setting the scene of the alert stage
            alertStage.setScene(new Scene(warrantyAlert.getRoot(), 600, 600));
            alertStage.setTitle("Alert - Warranty Expiry");

            // Make the alert a modal window
            alertStage.initModality(Modality.WINDOW_MODAL);
            alertStage.initOwner(primaryStage);  // Set the owner to the primary stage

            // Display the alert stage
            alertStage.showAndWait();  // This will block input to other windows until this one is closed
        } catch(Exception e) {
            e.printStackTrace();
        }
    }

    public static void main(String[] args) {
        launch(args);
    }
}
